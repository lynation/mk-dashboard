<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-title="Mortgage"
        default-menu-include="false"
        default-menu-index="13">

    <parameter name="orderId" required="true"/>
    <parameter name="orderPartSeqId" required="true"/>
    <parameter name="isUnsecured" required="true"/>

    <transition name="createMortgage">
        <actions>
            <service-call name="mkdecision.dashboard.PartyServices.create#Mortgage" in-map="context"/>
            <service-call name="mkdecision.dashboard.PartyServices.check#MaritalStatusIsNeeded" in-map="context" out-map="context"/>
            <entity-find-one entity-name="mantle.order.OrderPartParty" value-field="partyRole">
                <field-map field-name="orderId"/>
                <field-map field-name="orderPartSeqId"/>
                <field-map field-name="roleTypeId" value="PrimaryApplicant"/>
            </entity-find-one>
            <entity-find-count entity-name="mantle.party.PartyToAndRelationship" count-field="mortgageCount">
                <econdition field-name="relationshipTypeEnumId" value="PrtMortgage"/>
                <econdition field-name="fromPartyId" from="partyRole?.partyId"/>
                <econdition field-name="fromRoleTypeId" value="Borrower"/>
            </entity-find-count>
            <if condition="mortgageCount == 0">
                <return message="${ec.l10n.localize('DASHBOARD_INVALID_MORTGAGE_COUNT')}" error="true"/>
            </if>
        </actions>
        <conditional-response url="../PrimaryApplicantMaritalStatus">
            <condition><expression>maritalStatusIsNeeded</expression></condition>
            <parameter name="orderId"/>
            <parameter name="orderPartSeqId"/>
            <parameter name="isUnsecured"/>
        </conditional-response>
        <default-response url="../Agreement">
            <parameter name="orderId"/>
            <parameter name="orderPartSeqId"/>
            <parameter name="isUnsecured"/>
        </default-response>
    </transition>
    <transition name="updateMortgage">
        <!-- todo add mortgage is the correct way -->
        <actions>
            <service-call name="mkdecision.dashboard.PartyServices.update#Mortgage" in-map="context"/>
        </actions>
        <conditional-response url="../PrimaryApplicantMaritalStatus">
            <condition><expression>maritalStatusIsNeeded</expression></condition>
            <parameter name="orderId"/>
            <parameter name="orderPartSeqId"/>
            <parameter name="isUnsecured"/>
        </conditional-response>
        <default-response url="../Agreement">
            <parameter name="orderId"/>
            <parameter name="orderPartSeqId"/>
            <parameter name="isUnsecured"/>
        </default-response>
    </transition>
    <transition name="deleteMortgage">
        <service-call name="mkdecision.dashboard.PartyServices.delete#Mortgage" in-map="context"/>
        <default-response url="."/>
    </transition>
    <transition name="continue">
        <actions>
            <service-call name="mkdecision.dashboard.PartyServices.check#MaritalStatusIsNeeded" in-map="context" out-map="context"/>
            <entity-find-one entity-name="mantle.order.OrderPartParty" value-field="partyRole">
                <field-map field-name="orderId"/>
                <field-map field-name="orderPartSeqId"/>
                <field-map field-name="roleTypeId" value="PrimaryApplicant"/>
            </entity-find-one>
            <entity-find-count entity-name="mantle.party.PartyToAndRelationship" count-field="mortgageCount">
                <econdition field-name="relationshipTypeEnumId" value="PrtMortgage"/>
                <econdition field-name="fromPartyId" from="partyRole?.partyId"/>
                <econdition field-name="fromRoleTypeId" value="Borrower"/>
            </entity-find-count>
            <if condition="mortgageCount == 0">
                <!-- Create a mock mortgage if user does not enter or have a mortgage -->
                <set field="lenderName" value="N/A"/>
                <set field="mortgagePaymentMonthly" type="BigDecimal" value="0"/>
                <set field="partyId" from="partyRole?.partyId"/>
                <service-call name="mkdecision.dashboard.PartyServices.create#Mortgage" in-map="context"/>
            </if>
        </actions>
        <conditional-response url="../PrimaryApplicantMaritalStatus">
            <condition><expression>maritalStatusIsNeeded</expression></condition>
            <parameter name="orderId"/>
            <parameter name="orderPartSeqId"/>
            <parameter name="isUnsecured"/>
        </conditional-response>
        <default-response url="../Agreement">
            <parameter name="isUnsecured"/>
        </default-response>
    </transition>
    <transition name="property">
        <default-response url="../Property"/>
    </transition>
    <transition name="coApplicant">
        <actions>
            <entity-find-count entity-name="mantle.order.OrderPartParty" count-field="coApplicantCount">
                <econdition field-name="orderId" from="orderId"/>
                <econdition field-name="orderPartSeqId" from="orderPartSeqId"/>
                <econdition field-name="roleTypeId" value="CoApplicant"/>
            </entity-find-count>
        </actions>
        <conditional-response url="../CoApplicantOption">
            <condition>
                <expression>coApplicantCount == 0</expression>
            </condition>
            <parameter name="orderId"/>
            <parameter name="orderPartSeqId"/>
            <parameter name="isUnsecured"/>
        </conditional-response>
        <default-response url="../CoApplicantEmployment">
            <parameter name="orderId"/>
            <parameter name="orderPartSeqId"/>
            <parameter name="isUnsecured"/>
        </default-response>
    </transition>

    <actions>
        <entity-find-one entity-name="mantle.order.OrderHeader" value-field="orderHeader"/>
        <entity-find-one entity-name="mantle.order.OrderPart" value-field="orderPart"/>

        <entity-find entity-name="mantle.order.OrderPartParty" list="partyList">
            <econdition field-name="orderId" from="orderId"/>
            <econdition field-name="orderPartSeqId" from="orderPartSeqId"/>
            <econdition field-name="roleTypeId" value="PrimaryApplicant"/>
        </entity-find>
        <set field="partyId" from="partyList?.getFirst()?.partyId ?: null"/>

        <entity-find entity-name="mantle.party.PartyToAndRelationship" list="mortgageRelationList">
            <econdition field-name="relationshipTypeEnumId" value="PrtMortgage"/>
            <econdition field-name="fromPartyId" from="partyId"/>
            <econdition field-name="fromRoleTypeId" value="Borrower"/>
            <order-by field-name="fromDate"/>
        </entity-find>
    </actions>

    <widgets>
        <container-row>
            <row-col xs="0" sm="1" md="3" lg="3"/>
            <row-col xs="12" sm="10" md="6" lg="6">
                <container style="stepper margin-b-1">
                    <render-mode>
                        <text type="qvt"><![CDATA[
                            <q-stepper ref="stepper" value="s4" color="primary" :flat="true">
                                <q-step name="s1" title="Order Items" icon="shopping_cart"/>
                                <q-step name="s2" title="Eligibility" icon="policy"/>
                                <q-step name="s3" title="Applicants" icon="person"/>
                                <q-step name="s4" title="Property" icon="home"/>
                                <q-step name="s5" title="Agreements" icon="done"/>
                            </q-stepper>
                        ]]></text>
                    </render-mode>
                </container>
            </row-col>
            <row-col xs="0" sm="1" md="3" lg="3"/>
        </container-row>

        <container-row style="form-no-margin">
            <row-col xs="0" sm="1" md="3" lg="3"/>
            <row-col xs="12" sm="10" md="6" lg="6">

                <label text="Mortgage" type="h5" style="margin-b-1"/>
                <label text="Please enter mortgage information to continue" style="margin-b-1"/>
                <container style="h-separator margin-tb-2"/>

                <section-include name="MortgageSection" location="component://mk-dashboard/template/party/PartyWidgets.xml"/>

                <container-row>
                    <row-col xs="6" sm="6" md="6" lg="6" style="padding-all-0">
                        <link condition="isUnsecured == 'false'" url="property" text="Back" style="text-black"/>
                        <link condition="isUnsecured == 'true'" url="coApplicant" text="Back" style="text-black"/>
                    </row-col>
                    <row-col xs="6" sm="6" md="6" lg="6" style="padding-all-0 text-right">
                        <link url="continue" text="Continue" btn-type="default" parameter-map="[orderId: orderId, orderPartSeqId: orderPartSeqId]"/>
                    </row-col>
                </container-row>
            </row-col>
            <row-col xs="0" sm="1" md="3" lg="3"/>
        </container-row>
    </widgets>

</screen>
